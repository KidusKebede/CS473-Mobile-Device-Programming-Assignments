<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextAthleteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Athlete Name" />

    <EditText
        android:id="@+id/editTextSportName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sport Name" />

    <EditText
        android:id="@+id/editTextCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country" />

    <EditText
        android:id="@+id/editTextBestPerformance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Best Performance" />

    <EditText
        android:id="@+id/editTextMedal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medal" />

    <EditText
        android:id="@+id/editTextFacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Facts" />

</LinearLayout>